<div class="bloc-entete-model">
  <div class="card card-header entete-index">
    <div class="row m-0 p-0">
      <div class="col ms-1">
        <strong>Produits</strong> 
      </div>
      <div class="col">
        <span id="produit_counter" class="position-absolute top-0 start-100 
            translate-middle badge rounded-pill bg-warning text-dark">
          <%= Produit.count %>
        </span>
      </div>
    </div>
  </div> 

  <div class="m-0 p-0 text-dark">
    <%= render "search" %>  
    <%= render "choixCategorie" %> 
  </div>

</div>

<div class="list-records-item-produits">
    <%= turbo_frame_tag :modal %>

      <div id="produits">
          <%= render @produits %>
      </div>
</div> 


<footer class="fixed-bottom text-end m-2">
  <div class="badge bg-dark">
    <%== pagy_nav(@pagy) %>
  </div>
</footer>