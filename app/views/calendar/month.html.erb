    <div class="text-center"> 

      <%= month_calendar(events: @meetings_periode) do |date, meetings| %>
        <div class="day">
          <%= date.day %>
        </div>

        <% meetings.each do |meeting| %>
          <div class="card-header">
            <div class="card-title">
              <%= link_to meeting.name, meeting, class:"text-primary" %>
            </div>
            <div class="card-body"> 
              <p class="card-text">
                De: <%= meeting.start_time.strftime('%I:%M %p') %>
              </p>
              <p class="card-text">
                Ã : <%= meeting.end_time.strftime('%I:%M %p') %>
              </p>
            </div>
        <% end %>
      <% end %>

    </div>

    
