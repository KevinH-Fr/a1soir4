<% if user_signed_in? %>
  <% if current_user.admin? %>

    <div class="bloc-entete-model">
      <div class="card card-header entete-index">
        <div class="row m-0 p-0">
          <div class="col ms-1">
            <strong>Profiles</strong> 
          </div>
          <div class="col">
            <span class="badge rounded-pill counter-model-dashboard"><%= Profile.count %></span>
          </div>
        </div>
      </div> 
      
    </div>

    <%= link_to "Nouveau", new_profile_path, data:{turbo_frame: "modal"}, 
                class:"btn btn-sm btn-warning m-1 p-1" %>

    <div class="">
      <%= turbo_frame_tag :modal %>
    </div>
      
    <div class="list-records-item">
      <div id="profiles">
        <%= render @profiles %>
      </div>
    </div> 

  <% else %>
    <%= render "accueil_admin/demandeConnexion" %>

  <% end %>
<% end %>