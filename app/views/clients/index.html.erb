
<div class="bloc-entete-model">
  <div class="card card-header entete-index">
    <div class="row m-0 p-0">
      <div class="col ms-1">
        <strong>Clients</strong> 
      </div>
      <div class="col">
        <span id="client_counter" class="position-absolute top-0 start-100 
            translate-middle badge rounded-pill bg-warning text-dark">
          <%= Client.count %>
        </span>
      </div>
    </div>
  </div> 
  
  <div class="mb-1">
    <%= render "search" %>
  </div>
</div>
    
<div class="list-records-item">

  <%= link_to "Nouveau", new_client_path, data:{turbo_frame: "modal"}, 
      class:"btn btn-sm btn-warning" %>

  <%= turbo_frame_tag :modal %>

  <div id="clients">
    <%= render @clients %>
  </div>
  


</div> 

 <div class="card card-footer footer-index">
  <div class="row m-0 p-0">
     
    <div class="col-6">
       item1
       item2
       item3
    </div>
    <div class="col-6">
      <div class="position-relative">
        <div class="position-absolute end-0">
          <div class="badge bg-dark">
            <%== pagy_nav(@pagy) %>
          </div>
        </div>
       </div>
    </div>
  </div>
</div> 



