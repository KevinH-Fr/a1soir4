
<div class="bloc-entete-model sticky-top" style="top: 5px; bottom: 0px;">
  <div class="card card-header entete-index">
    <strong>Client</strong> 
  </div>
</div>

  <%= render @client %> 

  <%= link_to "Nouvelle commande", toggle_commande_client_commande_path(clientId: @client), 
        class:"btn btn-sm btn-primary mb-2" %>

  <% if Commande.client_courant(@client).present? %>
