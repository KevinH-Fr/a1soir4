<div id="<%= dom_id client %>">

<div class="card text-bg-dark mb-3 mx-auto" style="max-width: 36rem;">
  <div class="card-header border-light"> 
    <div class="card-title"> <%= client.nom %> </div>
  </div>
    <div class="card-body">
      <div class="card-text"> mail: <%= client.mail %></div>
     
    </div>
    <div data-controller="dropdown", class="mx-3">
      <div role="button" data-action="click->dropdown#openDropdown" data-dropdown-target="openButton", class="fa-solid fa-eye btn btn-primary btn-sm">
      </div>
      <div role="button" data-action="click->dropdown#closeDropdown" data-dropdown-target="closeButton", class="fa-solid fa-eye-slash btn btn-primary btn-sm">
      </div>
      <div data-dropdown-target="dropdownContent">
         <p class="card-text"> commentaires: <%= client.commentaires %></p>
     
        <div class="card-text my-2"> 
          commandes: 
          <div class="ms-3 my-2">
            <table class="table table-striped table-dark table-hover", style="line-height: 0.5">
              <% Commande.client_courant(client).each do |c| %>
                <tr>
                  <td> <%= c.nom %> </td>
                  <td> <%= c.montant %> </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
     
      </div>
    </div>
    <div class="card-footer border-light mt-2">    
      <table>
      <tr>
        <td>   
          <%= button_to "", edit_client_path(client), class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary", method: :post %> 
        </td>
        <td>
          <%= button_to '', client_path(client), class:"fa-solid fa-trash-can btn btn-danger btn-sm", method: :delete %> 
        </td>
      </tr>
      </table>
    </div>
  </div>
</div>