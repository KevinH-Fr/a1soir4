
<div class="bloc-entete-model sticky-top" style="top: 0px; bottom: 0px;">
  <div class="card card-header entete-index">
    <div class="row m-0 p-0">
      <div class="col ms-1">
        <strong>Commandes</strong> 
      </div>
      <div class="col">
        <span class="badge rounded-pill counter-model-dashboard"><%= Commande.count %></span>
      </div>
    </div>
  </div> 
  
  <div class="bloc-record p-0 mb-1">
    <%= render "search" %>
  </div>

</div>

<div class="">
  <%= turbo_frame_tag :modal %>
</div>
  
<div class="list-records-item">
  <div id="commandes">
    <%= render @commandes %>
  </div>
</div> 

<div class="footer-index sticky-bottom m-0 p-1">
  <div class="container text-center">
    <div class="row justify-content-evenly">
      <div class="col-4 text-start">
        <%= link_to "", commandes_path, class:"fa-solid fa-rotate-left btn btn-sm btn-secondary" %> 
      </div>
      <div class="col-4 text-center">
        <div class="badge bg-dark">
          <%== pagy_nav(@pagy) %>
        </div>
      </div>
      <div class="col-4 text-end">
        <%= link_to "", commandes_path, class:"fa-solid fa-file-export btn btn-sm btn-primary" %> 
      </div>
    </div>
  </div>
</div>