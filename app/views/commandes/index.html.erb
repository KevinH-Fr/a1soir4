      <div class="col ms-1">
        <strong>Commandes</strong> 
      </div>
      <div class="col">
        <span id="commande_counter" class="position-absolute top-0 start-100 
            translate-middle badge rounded-pill bg-warning text-dark">
          <%= Commande.count %>
        </span>
      </div>
    </div>
  </div> 
  
  <div class="mb-1">
    <%= render "search" %>
  </div>

</div>

 <div class="">
    <%= link_to "Nouveau", new_commande_path, data:{turbo_frame: "modal"}, 
      class:"btn btn-sm btn-warning" %>

  <%= turbo_frame_tag :modal %>
  

</div>
  
<div class="list-records-item">
