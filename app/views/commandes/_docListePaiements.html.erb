<% @paiements = Paiement.commande_courante(@commande) %>

<h5> Paiements </h5>

 <table class="table table-bordered">
      <thead class="table">
        <tr>
          <th style="text-align: center;">#</th>
          <th>Type</th>
          <th>Date</th>
          <th>Montant</th>
        </tr>
      </thead>
      <tbody>

        <% @paiements.each_with_index do | paiement, i | %>
          <tr>
            <td class="text-center"> <%= i + 1 %> </td>
            <td class="text-center"> <%= paiement.typepaiement %> </td>
            <td class="text-center"> <%= paiement.created_at.strftime("%d/%m/%y") %> </td>
            <td class="text-end"> <%= paiement.montant %> </td>
          </tr> 
        <% end %>
      </tbody>

      <tfoot>
        <tr>
          <td colspan=3 class="footer text-center">  totaux  </td>
          <td class="footer text-end"> 
            <%= Paiement.commande_courante(@commande).sum_paiements %> 
          </td>
        </tr>
        
      </tfoot>
    </table>

