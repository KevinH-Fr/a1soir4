
<div id="<%= dom_id commande %>">
  <% clientId = Commande.find(commande.id).client_id %>
  <div class="bloc-record">

    <div class="row">
      <div class="col-9 text-dark">
        <div class="text-start mx-1 p-0">
          <div class="badge-infos">
            <%= link_to commande.texte_record, commande_path(commande.id), class: "link-record" %>
          </div> 
          <hr class="text-dark m-2"> 

          <% if commande.client_id.present? %>
            <span class="badge badge-infos-second bg-primary text-light"> <%= Client.find(commande.client_id).full_name %> </span>      
          <% end %>

          <span class="badge badge-infos-second"> <%= commande.auto_name %> </span> 
          <% if commande.info_evenement.present? %>
            <span class="badge badge-infos-second bg-warning text-light"> <%= commande.info_evenement %> </span>      
          <% end %>

          <% if commande.profile_id.present? %>
            <span class="badge badge-infos-second bg-dark text-light"> <%= Profile.find(commande.profile_id).full_name %> </span>      
          <% end %>

        </div>
      </div>

      <div class="col-3 m-0 p-1 text-end">

        <%= link_to '', commande_path(commande), 
            class:"fa-regular fa-folder-open btn btn-sm btn-success mb-1" %> 
        <%= button_to "", edit_commande_path(commande), 
            class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary mb-1", method: :post %> 
        <%= button_to '', commande_path(commande), 
            class:"fa-solid fa-trash-can btn btn-danger btn-sm", method: :delete %> 
      </div>
    </div>
  </div>

</div>
