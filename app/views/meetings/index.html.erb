<% if user_signed_in? %>
  <% if current_user.admin? %>

    <div class="bloc-entete-model">
      <div class="card card-header entete-index">
        <div class="row m-0 p-0">
          <div class="col-11">
            <strong>CALENDRIER</strong> 
          </div>
          <div class="col-1 text-end m-0 p-0">
            <span class="badge rounded-pill counter-model-dashboard"><%= Meeting.count %></span>
          </div>
        </div>
      </div> 
      
    </div>



    <div class="text-center"> 

      <%= month_calendar(events: @meetings_periode) do |date, meetings| %>
        <div class="day">
          <%= date.day %>
        </div>

        <% meetings.each do |meeting| %>
          <div class="card-header">
            <div class="card-title">
              <%= link_to meeting.name, meeting, class:"text-primary" %>
            </div>
            <div class="card-body"> 
              <p class="card-text">
                De: <%= meeting.start_time.strftime('%I:%M %p') %>
              </p>
              <p class="card-text">
                Ã : <%= meeting.end_time.strftime('%I:%M %p') %>
              </p>
            </div>
        <% end %>
      <% end %>

    </div>

    
      <%= link_to "Nouveau", new_meeting_path, class:"btn btn-sm btn-warning m-1 p-1 fw-bold" %>

    <div class="fixed-bottom footer-index text-center bg-dark">
        <div class="row justify-content-evenly">
          <div class="col-4 text-start">
            <%= link_to "", meetings_path, class:"fa-solid fa-rotate-left btn btn-sm btn-secondary" %> 
          </div>
          <div class="col-4 text-center">
            <div class="badge bg-dark">
              <%#== pagy_nav(@pagy) %>
            </div>
          </div>
          <div class="col-4 text-end">
            <%= link_to "", meetings_path, class:"fa-solid fa-file-export btn btn-sm btn-primary" %> 
          </div>
        </div>
    </div>


  <% else %>
    <%= render "accueil_admin/demandeConnexion" %>

  <% end %>
<% end %>



