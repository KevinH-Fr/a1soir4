<p style="color: green"><%= notice %></p>

<h1>Meetings</h1>

<div id="meetings">
  <% @meetings.each do |meeting| %>
    <%= render meeting %>
    <p>
      <%= link_to "Show this meeting", meeting %>
    </p>
  <% end %>
</div>

<%= link_to "New meeting", new_meeting_path %>

<hr>  

<div class="text-center"> 

  <%= month_calendar(events: @meetings_periode) do |date, meetings| %>
    <div class="day">
      <%= date.day %>
    </div>

    <% meetings.each do |meeting| %>
      <div class="card-header">
        <div class="card-title">
          <%= link_to meeting.name, meeting, class:"text-primary" %>
        </div>
        <div class="card-body"> 
          <p class="card-text">
            De: <%= meeting.start_time.strftime('%I:%M %p') %>
          </p>
          <p class="card-text">
            Ã : <%= meeting.end_time.strftime('%I:%M %p') %>
          </p>
        </div>
    <% end %>
  <% end %>

</div>