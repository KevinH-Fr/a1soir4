 
<div class="card text-bg-dark mb-1">
  <div class="card-header bg-black text-center"> 
    <strong>Sous-articles</strong> 
  </div>
  <div class="card-body bg-light p-0 m-0">
    <div class="col p-0 m-0">
      <div id="sousarticles">
        <%= render @sousarticles %>
      </div>
    </div>
  </div>

  <div class="card-footer mb-4 bg-dark"> 

    <% @commandeId = params[:commandeId] %>
    <% @produitId = params[:produitId] %>
    <% @articleId = params[:articleId] %>

    <div class="position-relative">
      <div class="position-absolute top-0 end-0">
  
          <div data-controller="nouveau">
            <div class="row p-0 m-0">
              <div class="col p-0 mx-1">
                <div class="shadow rounded text-dark text-center">
                  <%= link_to "Auto", toggle_sousarticleauto_sousarticle_path(
                      produitId: @produitId, commandeId: @commandeId, articleId: @articleId), 
                      class:"btn btn-sm btn-primary" %> 
                </div>
              </div>
              <div class="col p-0 mx-1">
                <div class="shadow rounded text-dark text-center">
                  <div role="button" data-action="click->nouveau#openNouveau" data-nouveau-target="openNouveau", class="btn btn-sm btn-success", style="inline;">
                    Nouveau
                  </div>
                  <div role="button" data-action="click->nouveau#closeNouveau" data-nouveau-target="closeNouveau", class="btn btn-sm btn-danger", style="inline;">
                    Fermer
                  </div> 
                </div>
              </div>
            </div>
            <div id="new_sousarticle">
              <div data-nouveau-target="nouveauContent">
                <%= render partial: "sousarticles/form", locals: {sousarticle: Sousarticle.new} %>
              </div>
            </div>
          </div>

      </div>
    </div>
  </div>

</div>
