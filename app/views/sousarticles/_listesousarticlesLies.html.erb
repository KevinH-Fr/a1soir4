<div class="table-responsive">
  <table class="table table-secondary table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th style="text-align: center;">#</th>
        <th>Nom</th>
        <th>Description</th>
        <th colspan=3> Actions</th>
      </tr>
    </thead>
    <tbody class="fs-6">
      <% @sousarticles.each do | sousarticle | %>
        <tr>
          <td> <%= sousarticle.id %> </td>
          <td> <%= sousarticle.nature %> </td>
          <td> <%= sousarticle.description %> </td>
          <td style="width:10px"> <%= link_to "", sousarticle_path(sousarticle), class:"fa-regular fa-eye btn btn-sm btn-primary" %> </td> 
          <td style="width:10px"> <%= link_to "", edit_sousarticle_path(sousarticle), class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary" %> </td> 
          <td style="width:10px"> <%= button_to "", sousarticle, method: :delete, class:"fa-solid fa-trash-can btn btn-sm btn-danger" %> </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

