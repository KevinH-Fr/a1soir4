
<div class="card mx-2 text-bg-dark">
 <div class="card-header bg-black border-light">
    <strong>Sous-articles</strong> 
  </div>
  <div class="table-responsive mx-2">
    <table class="table table-secondary table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th class="text-center">#</th>
          <th>type</th>
          <th>prix</th>
          <th colspan=3> Actions</th>
        </tr>
      </thead>
      <tbody> 
        <% @sousarticles.each_with_index do |sousarticle, i| %> 
          <tr>
            <%#= render sousarticle %>
            <td class="text-center", style="width: 50px;"> <%= i = i + 1 %> </td>
            <td> <%= sousarticle.nature %> </td>
            <td class="text-end"> <%= sousarticle.prix_sousarticle %> </td>
            <td class="text-center", style="width: 15px;"> <%= link_to '', sousarticle, class:"fa-solid fa-eye btn btn-primary btn-sm" %>  </td>
            <td class="text-center", style="width: 15px;"> <%= link_to "", edit_sousarticle_path(sousarticle, articleId: sousarticle.article_id), class:"fa-regular fa-pen-to-square btn btn-secondary btn-sm" %> </td> 
            <td class="text-center", style="width: 15px;"> <%= button_to '', sousarticle, class:"fa-solid fa-trash-can btn btn-danger btn-sm", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>  </td> 
          </tr>
        <% end %>
      </tbody>
      <tfoot class="table-dark fs-bold">
        <tr>
          <td colspan=1>  
            totaux
          </td>
          <td class="text-center">
           nb:  <%= Sousarticle.article_courant(@article).compte_sousarticles %>
          </td>
        
          <td class="text-end fw-bold">
            <%= Sousarticle.article_courant(@article).sum_sousarticles %>
          </td>
          <td colspan=3>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
