<div id="<%= dom_id sousarticle %>">

  <div class="card rounded m-1 border-white">
    <div class="card-body p-1">
      <div class="row">
        <div class="col">
          <div class="shadow rounded text-dark text-start">
            <%= sousarticle.nature %>
          </div>
        </div>
        <div class="col">
          <div class="shadow rounded text-dark text-center">
             <%= sousarticle.prix_sousarticle %>
          </div>
        </div>
        <div class="col">
          <div class="position-relative">
            <div class="position-absolute top-0 end-0">
              <table>
                <tr>
                  <td>
                    <%= link_to "", sousarticle_path(sousarticle), 
                        class:"fa-regular fa-folder-open btn btn-sm btn-warning" %> 
                  </td>
                  <td>   
                    <%= button_to "", edit_sousarticle_path(sousarticle), 
                        class:"fa-regular fa-pen-to-square btn btn-sm btn-secondary", method: :post %> 
                  </td>
                  <td>
                    <%= button_to '', sousarticle_path(sousarticle), 
                        class:"fa-solid fa-trash-can btn btn-danger btn-sm", method: :delete %> 
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      
      </div>
    </div>
  </div> 

</div>