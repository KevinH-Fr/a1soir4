<div class="card bloc-dashboard">
  <div class="header-bloc-dashboard"> 

        <i class="fa iconcolor fa-shirt mx-2"></i>
         <%= link_to "PRODUITS", produits_path %> 
         <span class="badge rounded-pill counter-model-dashboard"><%= Produit.count %></span>
 

  </div>
  <div class="card-body body-bloc-dashboard"> 
    <table class="table bloc-table table-primary table-striped table-hover">
      <tbody class="table-light">
        <% @produits.limit(5).each do | produit | %>
          <tr> 
            <td> 
              <%= link_to produit.nom, produit_path(produit), class:"text-dark fs-6 crop", style:"text-decoration: none;" %> 
            </td>
          </tr> 
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer footer-bloc-dashboard">
    <%= search_form_for(@q, url: produits_path, method: :get, class:'d-flex') do |f| %>
      <%= f.search_field :nom_cont, placeholder: "recherche...", 
         class: "form-control form-control-sm search-dashboard" %>
      <%= f.submit "Go!", class:"btn btn-sm btn-success m-0 p-0 mx-1" %>
    <%= link_to "", new_produit_path(), class:"fa fa-add btn btn-sm btn-primary m-0 p-1 mx-0" %> 
    <% end %>
  </div>
</div>