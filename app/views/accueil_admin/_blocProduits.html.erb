<div class="card bloc-dashboard">
  <div class="header-bloc-dashboard"> 
    <div class="row align-items-center m-0 p-0">
      <div class="col-2 m-0 p-0">
        <i class="fa iconcolor fa-shirt ms-1"></i>
      </div>
      <div class="col-6 format-titre-dashboard">
        <%= link_to "PRODUITS", produits_path, class:"format-titre-dashboard" %> 
      </div>

      <div class="col-4 text-end m-0 p-0">
        <div class="badge rounded-pill counter-model-dashboard"><%= Produit.count %></div>
        <%= link_to "", new_produit_path(), class:"fa fa-add add-dashboard btn btn-sm" %>
      </div>
    </div>
  </div>

  <div class="card-body body-bloc-dashboard"> 
    <table class="table bloc-table table-primary table-striped table-hover m-0 p-0">
      <tbody class="table-light table-dashboard">
        <% @produits.limit(5).order(updated_at: :desc).each do | produit | %>
          <tr> 
            <td> 
              <%= link_to produit.nom, produit_path(produit), class:"text-dark crop", style:"text-decoration: none;" %> 
            </td>
          </tr> 
        <% end %>
      </tbody>
    </table>
  </div>

</div>