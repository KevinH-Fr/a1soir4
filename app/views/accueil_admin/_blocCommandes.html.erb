<div class="card bloc-dashboard">
  <div class="header-bloc-dashboard"> 
    <div class="row align-items-center m-0 p-0">
      <div class="col-2 m-0 p-0">
        <i class="fa iconcolor fa-file-invoice ms-1"></i>
      </div>
      <div class="col-6 format-titre-dashboard">
        <%= link_to "COMMANDES", commandes_path, class:"format-titre-dashboard" %> 
      </div>

      <div class="col-4 text-end m-0 p-0">
        <div class="badge rounded-pill counter-model-dashboard"><%= Commande.count %></div>
        <%= link_to "", new_commande_path(), class:"fa fa-add add-dashboard btn btn-sm" %>
      </div>
    </div>
  </div>

  <div class="card-body body-bloc-dashboard"> 
    <table class="table bloc-table table-primary table-striped table-hover">
      <tbody class="table-light">
        <% @commandes.limit(5).each do | commande | %>
          <tr> 
            <td> 
              <%= link_to commande.texte_record, commande_path(commande), class:"text-dark crop", style:"text-decoration: none;" %> 
            </td>
          </tr> 
        <% end %>
      </tbody>
    </table>
  </div>

</div>